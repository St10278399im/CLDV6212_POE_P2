@model AbCRetailers.Models.Product

<h2>Delete Product</h2>
<h4>Are you sure you want to delete this product?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-3">Product Name</dt>
        <dd class="col-sm-9">@Model.ProductName</dd>

        <dt class="col-sm-3">Price</dt>
        <dd class="col-sm-9">$@Model.Price</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" name="partitionKey" value="@Model.PartitionKey" />
        <input type="hidden" name="rowKey" value="@Model.RowKey" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

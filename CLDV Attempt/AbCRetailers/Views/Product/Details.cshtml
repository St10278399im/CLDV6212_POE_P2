@model AbCRetailers.Models.Product

<h2>Product Details</h2>
<div>
    <dl class="row">
        <dt class="col-sm-3">Product Name</dt>
        <dd class="col-sm-9">@Model.ProductName</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Price</dt>
        <dd class="col-sm-9">$@Model.Price</dd>

        <dt class="col-sm-3">Stock Available</dt>
        <dd class="col-sm-9">@Model.StockAvailable</dd>

        <dt class="col-sm-3">Image</dt>
        <dd class="col-sm-9">
            <img src="@Model.ImageUrl" alt="Product Image" style="max-width: 200px;" />
        </dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.RowKey" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

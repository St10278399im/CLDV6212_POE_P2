@model AbCRetailers.Models.AbCRetailers.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<div class="container mt-4">
    <h2>Delete Order</h2>
    <h5 class="text-danger">Are you sure you want to delete this order?</h5>

    <dl class="row mt-4">
        <dt class="col-sm-3">Customer</dt>
        <dd class="col-sm-9">@Model.Username</dd>

        <dt class="col-sm-3">Product</dt>
        <dd class="col-sm-9">@Model.ProductName</dd>

        <dt class="col-sm-3">Total Price</dt>
        <dd class="col-sm-9">@Model.TotalPrice.ToString("C")</dd>

        <dt class="col-sm-3">Order Date</dt>
        <dd class="col-sm-9">@Model.OrderDateUtc.ToString("yyyy-MM-dd")</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="partitionKey" value="@Model.PartitionKey" />
        <input type="hidden" name="rowKey" value="@Model.RowKey" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

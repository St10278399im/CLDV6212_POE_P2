@model List<AbCRetailers.Models.AbCRetailers.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<div class="container mt-4">
    <h2>Order List</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New Order
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">No orders found.</div>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Customer</th>
                    <th>Product</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Username</td>
                        <td>@order.ProductName</td>
                        <td>@order.OrderDateUtc.ToString("yyyy-MM-dd")</td>
                        <td>
                            <span class="badge @GetStatusBadgeClass(order.Status.ToString())">
                                @order.Status
                            </span>
                        </td>
                        <td>@order.TotalPrice.ToString("C")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@order.RowKey" class="btn btn-sm btn-info">View</a>
                            <a asp-action="Edit" asp-route-id="@order.RowKey" class="btn btn-sm btn-warning">Edit</a>
                            <form asp-action="Delete" asp-route-id="@order.RowKey" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this order?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@functions {
    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning text-dark",
            "Processing" => "bg-info text-dark",
            "Shipped" => "bg-primary",
            "Delivered" => "bg-success",
            "Cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
